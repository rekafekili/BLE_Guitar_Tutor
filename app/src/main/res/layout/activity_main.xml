            android:id="@+id/main_ble_send_button5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SEND"/>
    </LinearLayout>

    <include
        android:id="@+id/main_progressbar"
        layout="@layout/progressbar"
        android:visibility="gone" />

</LinearLayout>