            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <Button
            android:id="@+id/main_ble_send_button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SEND"/>
    </LinearLayout>

